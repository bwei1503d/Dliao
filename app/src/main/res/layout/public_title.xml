<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/main_color">


    <Button
        android:background="@drawable/public_leftbtn_selector"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/pub_title_leftbtn"/>

    <TextView
        android:id="@+id/pub_title_title"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="@color/whitecolor"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        />


    <Button
        android:layout_marginRight="@dimen/height10"
        android:textSize="16sp"
        android:textColor="@color/whitecolor"
        android:background="@color/tab_selected_textcolor"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pub_title_rightbtn"/>


</LinearLayout>