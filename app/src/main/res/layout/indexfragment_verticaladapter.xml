<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height120"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/height10"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/indexfragment_face"
                android:layout_width="@dimen/height80"
                android:layout_height="@dimen/height80"
                android:layout_marginLeft="@dimen/height20"
                android:layout_marginRight="@dimen/height10"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="@dimen/height30"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/indexfragment_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height10"
                    android:maxLines="1"
                    android:textColor="@color/color_black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/indexfragment_agesex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height10"
                    android:maxLines="1"
                    android:textColor="@color/erji_color"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/indexfragment_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/height10"
                    android:gravity="bottom"
                    android:maxLines="1"
                    android:textColor="@color/erji_color"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>